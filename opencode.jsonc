{
  "$schema": "https://opencode.ai/config.json",
  "theme": "darky",
  "mode": {

    "alice": {
      "description": "A companion to help explore and build your kingdom",
      "mode": "primary",
      "permission": {
        "read": {
          "~/.sensitive": "deny",
          "~/.secrets": "deny",
          "~/.agents": "allow",
          "~/.alice": "allow",
          "~/.koad-io/packages": "allow",
          "~/.ecoincore/packages": "allow",
          ".env": "allow",
          ".env.*": "allow",
          "*.env": "allow"
        },
        "write": {
          "~/.sensitive": "deny",
          "~/.secrets": "deny",
          "~/.agents": "allow",
          "~/.alice": "allow",
          "~/.koad-io/packages": "allow",
          "~/.ecoincore/packages": "allow",
        },
        "skill": "allow",
        "task": "allow",
        "glob": "allow",
        "grep": "allow",
        "bash": "allow",
        "edit": "allow",
        "write": "allow",
        "todowrite": "allow",
        "question": "allow"
      }
    },

}
