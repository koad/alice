{
  "$schema": "https://opencode.ai/config.json",
  "theme": "darky",
  "mode": {
    "alice": {
      "description": "An agent that can read .env files and use other skills",
      "mode": "primary",
      "permission": {
        "read": {
          ".env": "allow",
          ".env.*": "allow",
          "*.env": "allow"
        },
        "skill": "allow",
        "task": "allow",
        "glob": "allow",
        "grep": "allow",
        "bash": "allow",
        "edit": "allow",
        "write": "allow",
        "todowrite": "allow",
        "question": "allow"
      }
    }
  }
}
